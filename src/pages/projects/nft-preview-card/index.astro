---
import BaseLayout from "../../../layouts/BaseLayout.astro";
---

<style>
  :root {
    --soft-blue-primary: hsl(215, 51%, 70%);
    --cyan-primary: hsl(178, 100%, 50%);

    --blue-main-BG: hsl(217, 54%, 11%);
    --blue-card-BG: hsl(216, 50%, 16%);
    --blue-line: hsl(215, 32%, 27%);
    --white: hsl(0, 0%, 100%);

    --fs: 1.125rem;
  }

  .flex-group {
    display: flex;
    gap: 0.3rem;
  }

  body {
    font-family: "Outfit", sans-serif;
    background-color: var(--blue-main-BG);
  }

  main {
    min-height: 100vh;
    display: grid;
    place-content: center;
    background-color: var(--blue-main-BG);
  }

  .card {
    background-color: var(--blue-card-BG);
    display: grid;
    gap: 1rem;
    margin-top: 2rem;
    padding: 1rem;
    border-radius: 1rem;
    max-width: 375px;
    box-shadow: 0 1rem 2rem rgba(0, 0, 0, 0.5);
  }

  .card__images {
    display: block;
    position: relative;
  }

  .card__img {
    border-radius: 0.5rem;
    /* width: 100%;
  height: 100%; */
  }

  .overlay {
    border-radius: 0.5rem;
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: transparent;
    cursor: pointer;
    transition: all 0.3s ease-in-out;
  }

  .card__hover_img {
    opacity: 0;
    transition: all 0.3s linear;
  }

  .card__images:hover .overlay {
    background: hsla(178, 100%, 50%, 0.4);
  }

  .card__images:hover .card__hover_img {
    opacity: 1;
    transition: all 0.3s ease-in-out;
  }

  .card__content {
    display: grid;
    gap: 0.5rem;
  }

  .card__title {
    color: var(--white);
    font-size: 1.125rem;
  }

  .card__title:hover {
    color: var(--cyan-primary);
    cursor: pointer;
  }

  .card__description {
    font-weight: 300;
    color: var(--soft-blue-primary);
  }

  .card__info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 16px;
  }

  .card__info img {
    object-fit: contain;
  }

  .card__price {
    color: var(--cyan-primary);
  }

  .card__timeleft {
    color: var(--soft-blue-primary);
  }

  .card__author {
    display: flex;
    gap: 1rem;
    color: var(--soft-blue-primary);
    align-items: center;
  }

  .card__author img {
    border: white solid 1px;
    border-radius: 100%;
    /* object-fit: cover; */
    height: 2rem;
    width: 2rem;
  }

  .card__author span {
    color: var(--white);
    font-style: 16px;
  }

  .card__author span:hover {
    color: var(--cyan-primary);
    cursor: pointer;
  }

  .line {
    color: var(--blue-line);
  }
</style>

<BaseLayout pageTitle="NFT-Preview-Card">
  <article class="card">
    <div class="card__images">
      <img
        src="/images/nft-preview-component/image-equilibrium.jpg"
        alt="Image of a cube."
        class="card__img"
      />

      <div class="overlay">
        <img
          class="card__hover_img"
          src="/images/nft-preview-component/icon-view.svg"
          alt="Eye icon"
        />
      </div>
    </div>

    <div class="card__content">
      <h1 class="card__title">Equilibrium #3429</h1>
      <p class="card__description">
        Our Equilibrium collection promotes balance and calm.
      </p>
    </div>

    <div class="card__info">
      <div class="card__price flex-group">
        <img
          src="/images/nft-preview-component/icon-ethereum.svg"
          alt="Ethereum icon."
        />
        0.041 ETH
      </div>

      <div class="card__timeleft flex-group">
        <img
          src="/images/nft-preview-component/icon-clock.svg"
          alt="Clock icon."
        />
        3 days left
      </div>
    </div>

    <hr class="line" />

    <div class="card__author">
      <img
        src="/images/nft-preview-component/image-avatar.png"
        alt="image of a person"
      />
      <p>Creation of <span>Jules Wyvern</span></p>
    </div>
  </article>
</BaseLayout>
